<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="css/style.css" rel="stylesheet" type="text/css">
  <title>Polishändelser</title>
</head>
<header class="App-header">

</header>
<body>
  <p id="head-p">Polishändelser</p>
  <div id="event_container">
    <p id="titel-event">Sortera händelser</p>
    <button id="button-events" type="submit" form="show-events-form">
      <span>Visa</span>
    </button>
  </div>

  <div class="footer">
    <p id="title-p">Love Ekelöw</p>
    <p>All rights reserved</p>
    <p>Ha en trevlig {weekday}!</p>
  </div>
  <script>
    const hideButton = document.getElementById("button-events");
    const myDiv = document.getElementById("event_container");

    hideButton.addEventListener("click", function() {
      myDiv.style.display = "none";
    });
  </script>
</body>
</html>
