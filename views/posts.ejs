<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
  <h1>All Posts</h1>
  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <p>Author: <%= post.author %></p>
        <p>Posted on: <%= post.createdAt.toDateString() %></p>
      </li>
    <% }) %>
  </ul>
</body>
</html>
